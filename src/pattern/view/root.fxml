<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pattern.controller.RootController">
	<BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
	            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<top>
			<Label text="Ever drove an animal??" BorderPane.alignment="CENTER">
				<font>
					<Font size="36.0"/>
				</font>
			</Label>
		</top>
		<center>
			<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
				<BorderPane>
					<center>
						<ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
							<Image url="@../resources/car.png"/>
						</ImageView>
					</center>
					<bottom>
						<TextArea fx:id="carLog" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
							<BorderPane.margin>
								<Insets bottom="10.0"/>
							</BorderPane.margin>
						</TextArea>
					</bottom>
				</BorderPane>
				<BorderPane layoutX="185.0" layoutY="10.0">
					<center>
						<ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
							<Image url="@../resources/dog.png"/>
						</ImageView>
					</center>
					<bottom>
						<TextArea fx:id="animalLog" editable="false" prefHeight="100.0" prefWidth="200.0"
						          BorderPane.alignment="CENTER">
							<BorderPane.margin>
								<Insets bottom="10.0"/>
							</BorderPane.margin>
						</TextArea>
					</bottom>
				</BorderPane>
				<BorderPane layoutX="320.0" layoutY="10.0">
					<center>
						<VBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
							<Button mnemonicParsing="false" onAction="#startup" prefWidth="90.0" text="TURN ON">
								<VBox.margin>
									<Insets left="10.0" right="10.0"/>
								</VBox.margin>
							</Button>
							<Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#shutdown"
							        prefWidth="90.0" text="TURN OFF">
								<VBox.margin>
									<Insets left="10.0" right="10.0"/>
								</VBox.margin>
							</Button>
							<Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#accelerate"
							        prefWidth="90.0" text="ACCELERATE">
								<VBox.margin>
									<Insets left="10.0" right="10.0"/>
								</VBox.margin>
							</Button>
							<Button layoutX="10.0" layoutY="36.0" maxWidth="-Infinity" minWidth="-Infinity"
							        mnemonicParsing="false" onAction="#decelerate" prefWidth="90.0" text="DECELERATE">
								<VBox.margin>
									<Insets left="10.0" right="10.0"/>
								</VBox.margin>
							</Button>
						</VBox>
					</center>
				</BorderPane>
			</HBox>
		</center>
	</BorderPane>
</AnchorPane>
